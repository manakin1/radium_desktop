package com.radium.crm.controller.commands{		import com.radium.crm.model.Constants;	import com.radium.crm.model.ContentModel;	import com.radium.crm.model.vo.CredentialsVO;		import flash.data.EncryptedLocalStore;	import flash.filesystem.*;	import flash.utils.ByteArray;		import org.robotlegs.mvcs.SignalCommand;		/**	 * Saves the user's credentials in a encrypted local store.	 */
	 	public class SaveCredentialsCommand extends SignalCommand	{				[Inject]		public var model:ContentModel ;				[Inject]		public var credentials:CredentialsVO ;		override public function execute( ):void		{			trace( "SaveCredentialsCommand.execute:", credentials.email ) ;			var email:String = credentials.email ;			var password:String = credentials.password ;						var bytes_email:ByteArray = new ByteArray( ) ;			var bytes_password:ByteArray = new ByteArray( ) ;			var bytes_server:ByteArray = new ByteArray( ) ;						bytes_email.writeUTFBytes( email ) ;			bytes_password.writeUTFBytes( password ) ;			bytes_server.writeUTFBytes( model.serverURL ) ;						EncryptedLocalStore.setItem( "email", bytes_email ) ;			EncryptedLocalStore.setItem( "password", bytes_password ) ;			EncryptedLocalStore.setItem( "server", bytes_server ) ;		}	}}